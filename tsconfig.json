{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "es2021" //ADDED THIS
        ]
    },
    "include": [
        "**/*.ts"
,
"main.tsx",
"context.js",
"context.tsx",
"hooks.tsx"
]
}